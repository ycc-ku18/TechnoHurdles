<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20px"
    android:background="@drawable/background"
    tools:context="com.technohurdles.agronepal.ProductView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/detail_prod_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="32px"
            android:textStyle="bold"
            android:text="Product Name"/>
        <TextView
            android:id="@+id/detail_prod_discrption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_prod_name"
            android:textSize="24px"
            android:text="Discription \nAbout Product  \nSomething"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:background="@drawable/shape_line_breaker"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="विवरण"
                android:textSize="30px"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="आवश्यकता (Requirements) : "
                android:textStyle="bold"
                android:textSize="28px"
                android:background="#ffffff"/>
            <TextView
                android:id="@+id/detail_prod_requirement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:textSize="24px"
                android:text="Requirements Here
                \n.....
                \n.....
                \n.....
                \n.....
                \n.....
                \n....."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:text="प्रक्रिया (Procedure) : "
                android:textStyle="bold"
                android:textSize="28px"
                android:background="#ffffff"/>
            <TextView
                android:id="@+id/detail_prod_procedure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:textSize="24px"
                android:text="Procedure Here
                \n.....
                \n.....
                \n.....
                \n.....
                \n.....
                \n....."/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:text="बिक्रेता(Supplier)"
                android:textStyle="bold"
                android:textSize="28px"
                android:background="#ffffff"/>
            <TextView
                android:id="@+id/detail_prod_req_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:textSize="24px"
                android:text="Procedure Here
                \n.....
                \n.....
                \n.....
                \n.....
                \n.....
                \n....."/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:text="मध्यस्थकर्ता (Intermediator)"
                android:textStyle="bold"
                android:textSize="28px"
                android:background="#ffffff"/>
            <TextView
                android:id="@+id/detail_prod_intermediator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:textSize="24px"
                android:text="Procedure Here
                \n.....
                \n.....
                \n.....
                \n.....
                \n.....
                \n....."/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>